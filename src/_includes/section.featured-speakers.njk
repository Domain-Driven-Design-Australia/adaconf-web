{% for item in collections.sections %}
  {% if item.data.type === 'featured-speakers' %}
    <div id="featured-speakers" class="w-full min-h-screen flex flex-col justify-center items-center bg-blue-400 py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px-0">
        <h2 class="tracking-wide text-blue-900 font-bold text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-gray-200 text-xl mb-6">
          {{ item.templateContent | safe }}
        </div>
      </div>
      <div class="self-center justify-center w-full xl:w-4/5 flex flex-col sm:flex-row flex-wrap px-4 xl:px:0">
        {% for item in speakers | selectattr("featured") %}
          <div class="w-full sm:w-1/2 flex flex-col items-center hover:shadow-lg hover:bg-blue-800 hover:bg-opacity-50 px-4 sm:px-8 py-6 sm:py-12">
            
                <div class="w-1/2">
                    <svg viewBox="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <defs>
                            <pattern id="spimg-{{ item.name | slug }}" patternUnits="userSpaceOnUse" width="100" height="100">
                                <image xlink:href="{{ env.baseUrl }}img/speakers/{{ item.img }}" x="{{ item.xOffset }}" y="{{ item.yOffset }}" width="150" height="100" preserveAspectRatio="xMinYMid meet"/>
                            </pattern>
                        </defs>
                        <polygon points="28 5 72 5 99 50 72 95 28 95 01 50" fill="url(#spimg-{{ item.name | slug }})" stroke="rgb(229,231,235)" stroke-width="1"/>
                    
                    </svg>
                </div>

                <h3 class="tracking-wide text-blue-900 font-bold text-2xl uppercase mb-2">{{ item.name }}</h3>
                <div class="font-light text-gray-200 text-lg">
                    {{ item.title }}
                </div>

          </div>
        {% endfor %}
      </div>
      {% if item.data.afterTitle %}
        <div class="self-center text-center w-full sm:w-1/3 px-4 sm:px-0">
          <h3 class="font-bold tracking-widest text-blue-200 text-2xl my-6">{{ item.data.afterTitle }}</h3>
        </div>
      {% endif %}
    </div>
  {% endif %}
{% endfor %}