{% for item in collections.sections %}
  {% if item.data.type === 'about' %}
    <div id="about" class="w-full min-h-screen flex flex-col justify-center items-center py-12 space-y-4">
      <div id="about-content" class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px-0 my-12">
        <h2 class="font-bold tracking-wider text-gray-800 text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-black text-base text-left space-y-3">
          {{ item.templateContent | safe }}
          <div id="map">
            <iframe class="m-auto" src="{{ item.data.mapUrl | safe }}" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
        <!--<img class="my-12 max-w-full mx-auto" src="{{ env.baseUrl }}img/undraw_asset_selection_ix3v.svg" alt="ADAConf">-->
      </div>
      <div class="flex flex-row w-full justify-center">
        <a class="px-10 py-2 text-gray-200 bg-blue-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="https://sessionize.com/analysis-design-architecture-conference-2024/" target="_blank">Submit Your Idea</a>
      </div>
      <div class="flex flex-row w-full justify-center">
        <a class="px-10 py-2 text-gray-200 bg-purple-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="#topics">See Conference Topics</a>
      </div>
    </div>
  {% endif %}
{% endfor %}