{% for item in collections.sections %} {% if item.data.type === 'speakers' %}
<div
  id="speakers"
  class="w-full min-h-screen flex flex-col justify-center items-center bg-blue-400 py-12"
>
  <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px-0">
    <h2 class="tracking-wide text-blue-900 font-bold text-4xl mb-4">
      {{ item.data.title }}
    </h2>
    <div class="font-light text-gray-200 text-xl mb-6">
      {{ item.templateContent | safe }}
    </div>
  </div>
  <div
    class="self-center justify-center w-full xl:w-4/5 flex flex-col sm:flex-row flex-wrap px-4 xl:px:0 cursor-pointer"
  >
    {% for speaker in collections.sessionizeSpeakers %}
    <div
      onclick="return sessionize.showModal('z14jafzm', 'speaker', '{{speaker.id}}');"
      class="w-full sm:w-1/2 flex flex-col items-center hover:shadow-lg hover:bg-blue-800 hover:bg-opacity-50 px-4 sm:px-8 py-6 sm:py-12"
    >
      <div class="w-1/2">
        <svg
          viewBox="0 0 100 100"
          version="1.1"
          xmlns="http://www.w3.org/2000/svg"
        >
          <defs>
            <pattern
              id="spimg-{{ speaker.fullName | slugify }}"
              patternUnits="userSpaceOnUse"
              width="100"
              height="100"
            >
              <image
                xlink:href="{{ speaker.relativeProfilePicture }}"
                {#
                x="{{ item.xOffset }}"
                y="{{ item.yOffset }}"
                #}
                width="150"
                height="100"
                preserveAspectRatio="xMinYMid meet"
              />
            </pattern>
          </defs>
          <polygon
            points="28 5 72 5 99 50 72 95 28 95 01 50"
            fill="url(#spimg-{{ speaker.fullName | slugify }})"
            stroke="rgb(229,231,235)"
            stroke-width="1"
          />
        </svg>
      </div>

      <h3 class="tracking-wide text-blue-900 font-bold text-2xl uppercase mb-2">
        {{ speaker.fullName }}
      </h3>

      <div class="font-light text-gray-200 text-lg mb-2">
        {{ speaker.tagLine }}
      </div>
      <ul
        class="tracking-wide text-center text-blue-900 font-bold text-md mb-2"
      >
        {% for session in speaker.sessions %}
        <li>"{{ session.name }}"</li>
        {% endfor %}
      </ul>
    </div>
    {% endfor %}
  </div>
  {% if site.tickets %}
  <div class="flex flex-row w-full justify-center pb-12">
    <a
      class="px-10 py-2 text-gray-200 bg-purple-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red"
      data-goatcounter-click="trybooking.com"
      data-goatcounter-referrer="Speakers"
      href="{{site.tickets.url}}"
    >
      {{site.tickets.label}}
    </a>
  </div>
  {% endif %} {% if site.workshopTickets %}
  <div class="flex flex-row w-full justify-center pb-12">
    <a
      class="px-10 py-2 text-gray-200 bg-blue-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red"
      data-goatcounter-referrer="Workshops"
      data-goatcounter-click="trybooking.com"
      href="{{site.workshopTickets.url}}"
    >
      {{site.workshopTickets.label}}
    </a>
  </div>
  {% endif %} {% if item.data.afterTitle %}
  <div class="self-center text-center w-full sm:w-1/3 px-4 sm:px-0">
    <h3 class="font-bold tracking-widest text-blue-200 text-2xl my-6">
      {{ item.data.afterTitle }}
    </h3>
  </div>
  {% endif %}
</div>
{% endif %} {% endfor %}
