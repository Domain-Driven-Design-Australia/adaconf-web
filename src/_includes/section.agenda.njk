{% for item in collections.sections %}
  {% if item.data.type === 'agenda' %}
    <div id="agenda" class="w-full min-h-screen flex flex-col justify-center items-center bg-white-500 py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px-0">
        <h2 class="tracking-wide text-blue-900 font-bold text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-gray-200 text-xl mb-6">
          {{ collections.sessionizeAgenda | safe }}
        </div>
        <div class="flex flex-row w-full justify-center pb-12">
            <a class="px-10 py-2 text-gray-200 bg-blue-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="{{site.tickets}}">
                Register
            </a>
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}